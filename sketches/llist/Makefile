# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := baseline linear1 linear2

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

baseline: 
	@echo "==== Building baseline ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f baseline.make

linear1: 
	@echo "==== Building linear1 ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f linear1.make

linear2: 
	@echo "==== Building linear2 ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f linear2.make

clean:
	@${MAKE} --no-print-directory -C . -f baseline.make clean
	@${MAKE} --no-print-directory -C . -f linear1.make clean
	@${MAKE} --no-print-directory -C . -f linear2.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   baseline"
	@echo "   linear1"
	@echo "   linear2"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
